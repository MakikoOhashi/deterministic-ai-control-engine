{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/index.ts",
    "src/services/*.ts",
    "../shared/api.ts"
  ],
  "exclude": [
    "src/legacy/**"
  ]
}
